        "kustomize": "5.7.1",
        "go": "1.25",
        "golangci-lint": "latest",
        "kubernetes-helm": "3.19.0",
        "kyverno-chainsaw": "0.2.13",
        "apple-sdk_15": {
            "name": "apple-sdk_15",
